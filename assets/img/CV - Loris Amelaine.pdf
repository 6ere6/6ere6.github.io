        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @page {
            size: A4;
            margin: 0;
        }

        body {
            font-family: 'Inter', 'Segoe UI', sans-serif;
            background: #f5f5f5;
            color: #2d3748;
            line-height: 1.6;
        }

        .cv-container {
            width: 210mm;
            min-height: 297mm;
            margin: 20px auto;
            background: white;
            display: grid;
            grid-template-columns: 200px 1fr;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

        /* Bande diagonale à gauche - NOIR comme le portfolio */
        .left-panel {
            background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 100%);
            color: white;
            padding: 40px 25px;
            position: relative;
            overflow: hidden;
        }

        .left-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 150px;
            background: repeating-linear-gradient(
                45deg,
                rgba(241, 113, 155, 0.05),
                rgba(241, 113, 155, 0.05) 10px,
                transparent 10px,
                transparent 20px
            );
        }

        .right-panel {
            background: white;
            padding: 40px 50px;
        }

        /* Header avec nom */
        .header {
            grid-column: 1 / -1;
            background: white;
            padding: 40px 50px 30px;
            border-bottom: 3px solid #f1719b;
        }

        .name {
            font-size: 36px;
            font-weight: 700;
            color: #0a0a0a;
            letter-spacing: 2px;
            margin-bottom: 5px;
            text-transform: uppercase;
        }

        .title {
            font-size: 16px;
            color: #718096;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
        }

        /* Section Contact dans le panneau gauche */
        .contact-section {
            margin-top: 30px;
        }

        .section-title-left {
            font-size: 18px;
            font-weight: 700;
            color: #f1719b;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 2px solid rgba(241, 113, 155, 0.3);
            padding-bottom: 8px;
        }

        .contact-item {
            margin-bottom: 18px;
            font-size: 11px;
            line-height: 1.6;
            word-break: break-word;
        }

        .contact-item strong {
            display: block;
            color: #f1719b;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }

        .contact-item a {
            color: white;
            text-decoration: none;
            opacity: 0.9;
        }

        .contact-item a:hover {
            opacity: 1;
            text-decoration: underline;
        }

        /* Compétences - Barres de niveau */
        .competences-section {
            margin-top: 35px;
        }

        .skill-category {
            margin-bottom: 25px;
        }

        .skill-category-title {
            font-size: 11px;
            font-weight: 600;
            margin-bottom: 12px;
            color: #f1719b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .skill-item {
            margin-bottom: 10px;
        }

        .skill-name {
            font-size: 10px;
            margin-bottom: 4px;
            opacity: 0.9;
        }

        .skill-bar {
            height: 6px;
            background: rgba(255,255,255,0.2);
            border-radius: 3px;
            overflow: hidden;
        }

        .skill-level {
            height: 100%;
            background: linear-gradient(90deg, #f1719b, #ff9ecb);
            border-radius: 3px;
            transition: width 0.3s ease;
        }

        /* Langues et Autres */
        .list-item {
            font-size: 10px;
            margin-bottom: 8px;
            padding-left: 15px;
            position: relative;
            opacity: 0.9;
        }

        .list-item::before {
            content: "▸";
            position: absolute;
            left: 0;
            color: #f1719b;
        }

        /* Sections du panneau droit */
        .section-right {
            margin-bottom: 35px;
        }

        .section-title-right {
            font-size: 18px;
            font-weight: 700;
            color: #0a0a0a;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-left: 4px solid #f1719b;
            padding-left: 12px;
        }

        /* Formations */
        .formation-item {
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e2e8f0;
        }

        .formation-item:last-child {
            border-bottom: none;
        }

        .formation-header {
