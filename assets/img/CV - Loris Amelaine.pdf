            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e2e8f0;
        }

        .project-item:last-child {
            border-bottom: none;
        }

        .project-title {
            font-size: 13px;
            font-weight: 700;
            color: #0a0a0a;
            margin-bottom: 8px;
        }

        .project-description {
            font-size: 10px;
            color: #4a5568;
            line-height: 1.6;
        }

        .project-description ul {
            margin: 8px 0 0 15px;
            padding: 0;
        }

        .project-description li {
            margin-bottom: 4px;
        }

        /* Certifications */
        .cert-item {
            margin-bottom: 18px;
            padding-bottom: 18px;
            border-bottom: 1px solid #e2e8f0;
        }

        .cert-item:last-child {
            border-bottom: none;
        }

        .cert-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 4px;
        }

        .cert-title {
            font-size: 12px;
            font-weight: 700;
            color: #0a0a0a;
        }

        .cert-status {
            font-size: 9px;
            color: #f1719b;
            font-weight: 600;
            text-transform: uppercase;
        }

        .cert-description {
            font-size: 9px;
            color: #4a5568;
            line-height: 1.5;
        }

        /* Tags */
        .tags {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
            margin-top: 8px;
        }

        .tag {
            font-size: 8px;
            padding: 3px 8px;
            background: linear-gradient(90deg, rgba(241,113,155,0.1), rgba(255,158,203,0.1));
            color: #f1719b;
            border-radius: 10px;
            border: 1px solid rgba(241,113,155,0.2);
            font-weight: 500;
        }

        /* Portfolio link */
        .portfolio-link {
            text-align: center;
            margin-top: 20px;
            font-size: 10px;
            color: rgba(255,255,255,0.8);
        }

        .portfolio-link a {
            color: #f1719b;
            text-decoration: none;
            font-weight: 600;
        }

        /* Print styles */
        @media print {
            body {
                background: white;
            }
            .cv-container {
                margin: 0;
                box-shadow: none;
            }
        }
